@model SyllabusAutomation.Models.Department
@{
    ViewBag.Title = "UpdateDeptDetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid">
    <!-- Breadcrumbs-->

    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Department Detail</a>
        </li>
        <li class="breadcrumb-item active">Update Department Vision</li>

    </ol>
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Update Department Vision
        </div>
        <div class="card-body">
            @using (Html.BeginForm("UpdateDeptDetail", "DepartmentDetail", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(x => x.DepartmentId)


                <div class="col-md-12">
                    <div class="form-group">
                        <div class="col-md-6">
                            <h5>Name of Faculty</h5>
                            @Html.TextBoxFor(x => x.Faculty.FacultyName, htmlAttributes: new { @class = "form-control", required = "required", @readonly = "readonly" })
                            @Html.ValidationMessageFor(x => x.Faculty.FacultyName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <div class="col-md-6">
                            <h5>Name of Department</h5>
                            @Html.TextBoxFor(x => x.DeptName, new { @class = "form-control", required = "required", @readonly = "readonly" })
                            @Html.ValidationMessageFor(x => x.DeptName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <div class="col-md-6">
                            <h5>Short Name of Department</h5>
                            @Html.TextBoxFor(x => x.ShortName, new { @class = "form-control", required = "required", @readonly = "readonly" })
                            @Html.ValidationMessageFor(x => x.ShortName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <div class="col-md-6">
                            <h5>Introduction of Department</h5>
                            @Html.TextAreaFor(x => x.Introduction, new { @class = "form-control", required = "required", rows = "6", cols = "50" })
                            @Html.ValidationMessageFor(x => x.Introduction, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <div class="col-md-6">
                            <h5>Message From Chairman</h5>
                            @Html.TextAreaFor(x => x.MessageofChairman, new { @class = "form-control", required = "required", rows = "6", cols = "50" })
                            @Html.ValidationMessageFor(x => x.MessageofChairman, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <div class="col-md-6">
                            <h5>Vision of Department</h5>
                            @Html.TextAreaFor(x => x.Vision, new { @class = "form-control", required = "required", rows = "6", cols = "50" })
                            @Html.ValidationMessageFor(x => x.Vision, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <br />
                <div class="col-md-12">

                    <div class="col-md-6">
                        <h3>Contact Information</h3>
                        <hr />
                    </div>

                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <div class="col-md-6">
                            <h5>Mobile</h5>
                            @Html.TextBoxFor(x => x.Mobile, new { @class = "form-control", required = "required" })
                            @Html.ValidationMessageFor(x => x.Mobile, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <div class="col-md-6">
                            <h5>Fax</h5>
                            @Html.TextBoxFor(x => x.Fax, new { @class = "form-control", required = "required" })
                            @Html.ValidationMessageFor(x => x.Fax, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <div class="col-md-6">
                            <h5>Phone</h5>
                            @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", required = "required" })
                            @Html.ValidationMessageFor(x => x.Phone, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <div class="col-md-6">
                            <h5>Email</h5>
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", required = "required" })
                            @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <div class="col-md-6">
                            <h5>Website</h5>
                            @Html.TextBoxFor(x => x.Website, new { @class = "form-control", required = "required" })
                            @Html.ValidationMessageFor(x => x.Website, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>


                <div class="col-md-6">
                    <div class="col-md-10">
                        <a href="@Url.Action("DeptVision","DepartmentDetail")" class="btn btn-danger">Cancel</a>
                        <input type="submit" class="btn btn-success" value="Update" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>