﻿<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Syllabus Automation System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">

            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Syllabus Automation System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            @if (User.Identity.IsAuthenticated && User.IsInRole("4"))
            {
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li class="nav-item pull-right">
                            <a class="nav-link text-success" href="#" type="text/plain">
                                Welcome @Session["username"]!
                            </a>
                        </li>
                        <li> </li>
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        @*<li>@Html.ActionLink("About", "About", "Home")</li>
        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                        <li class="nav-item">
                            <a class="nav-link" href="@(Url.Action("ProgramSelection", "GenerateSyllabus"))" type="button">
                                <i class="fas fa-fw fa-pencil-alt"></i>
                                <span>View Course Wise</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@(Url.Action("SessionSelection", "GenerateSyllabus"))" type="button">
                                <i class="fas fa-fw fa-tachometer-alt"></i>
                                <span>View Full Syllabus</span>
                            </a>
                        </li>
                        <li>@Html.ActionLink("Logout", "Logout", "Account")</li>
                    </ul>
                   
                </div>
            }

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Developed By Sourav Kundu</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
