@model SyllabusAutomation.Models.SyllabusViewModel
@{
    ViewBag.Title = "Selection";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <!-- Breadcrumb navigation -->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index", "Dashboard")">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Create Syllabus </li>
    </ol>

   

    <div class="panel-group" id="accordion">
        <div id="collapseThree" class="panel-collapse collapse">
            <div class="panel-body">
                <div class="card mb-3">
                    <div class="card-header">
                        <i class="fas fa-table"></i>

                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("Selection", "GenerateSyllabus", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="col-md-6">
                                        <h5>Select Program</h5>
                                        @Html.DropDownListFor(x => x.ProgramId, ViewBag.ProgramList as SelectList, "--- Select Program ---", new { @class = "form-control", required = "required" })
                                        @Html.ValidationMessageFor(x => x.ProgramId, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="col-md-6">
                                        <h5>Select Session</h5>
                                        @Html.DropDownListFor(x => x.SessionId, ViewBag.SessionList as SelectList, "--- Select Session ---", new { @class = "form-control", required = "required" })
                                        @Html.ValidationMessageFor(x => x.SessionId, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="col-md-6">
                                        <h5>Select Year</h5>
                                        @Html.DropDownListFor(x => x.YearLength, ViewBag.YearList as SelectList, "--- Select Year ---", new { @class = "form-control", required = "required" })
                                        @Html.ValidationMessageFor(x => x.YearLength, "", new { @class = "text-danger" })
                                    </div>

                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="col-md-6">
                                        <h5>Select Semester</h5>
                                        @Html.DropDownListFor(x => x.SemesterPerYear, ViewBag.semesterList as SelectList, "--- Select Semester ---", new { @class = "form-control", required = "required" })
                                        @Html.ValidationMessageFor(x => x.SemesterPerYear, "", new { @class = "text-danger" })
                                    </div>

                                </div>
                            </div>
                           
                            <br />
                            <div class="col-md-6">
                                <div class="col-md-10">
                                    <a href="@Url.Action("Selection","GenerateSyllabus")" class="btn btn-danger">Cancel</a>
                                    @*<a onclick="window.history.back();" class="btn btn-danger">Cancel</a>*@
                                    <input type="submit" class="btn btn-success" value="Go" />
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Display all missions of the university in a table -->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-sign-out-alt"></i>

            <a data-toggle="collapse" data-parent="#accordion" href="#collapseThree" class="btn btn-info fas fa-plus-circle">          Start</a>
        </div>

    </div>
</div>

