@using SyllabusAutomation.Models;
@model Tuple<Course, List<Course>>
@{
    ViewBag.Title = "CourseList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <!-- Breadcrumb navigation -->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index", "Dashboard")">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">CourseList</li>
    </ol>

    <!-- Success message displayed after adding a mission -->
    @if (TempData["msg"] != null)
    {
        <div class="alert alert-success text-danger">
            @TempData["msg"]
            <button type="button" class="close" data-dismiss="alert">
                <span>&times;</span>
            </button>
        </div>
    }

    <div class="panel-group" id="accordion">
        <div id="collapseThree" class="panel-collapse collapse">
            <div class="panel-body">
                <div class="card mb-3">
                    <div class="card-header">
                        <i class="fas fa-table"></i>
                        Add New Course
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("AddCourseList", "Course", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            @*<div class="col-md-12">
                                <div class="form-group">
                                    <div class="col-md-6">
                                        <h5>Course Code</h5>
                                        @Html.TextBoxFor(x => x.Item1.CourseCode, new { @class = "form-control", placeholder = "CSE-1101...", required = "required" })
                                        @Html.ValidationMessageFor(x => x.Item1.CourseCode, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>*@
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="col-md-6">
                                        <h5>Course Title</h5>
                                        @Html.TextBoxFor(x => x.Item1.CourseTitle, new { @class = "form-control", placeholder = "Fundamentals of Computer....", required = "required" })
                                        @Html.ValidationMessageFor(x => x.Item1.CourseTitle, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="col-md-6">
                                        <h5>Credit</h5>
                                        @Html.TextBoxFor(x => x.Item1.Credit, new { @class = "form-control", placeholder = "Numbers Only(3,1.5, etc..)", required = "required" })
                                        @Html.ValidationMessageFor(x => x.Item1.Credit, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="col-md-6">
                                        <h5>Course Summary</h5>
                                        @Html.TextAreaFor(x => x.Item1.CourseSummary, new { @class = "form-control", cols="50",rows="6", required = "required" })
                                        @Html.ValidationMessageFor(x => x.Item1.CourseSummary, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="col-md-6">
                                        <h5>Select Course Type</h5>
                                        @Html.DropDownListFor(x => x.Item1.CourseTypeId, ViewBag.CourseTypeList as SelectList, "--- Select Course Type ---", new { @class = "form-control", placeholder = "Numbers Only(10,8,etc)", required = "required" })
                                        @Html.ValidationMessageFor(x => x.Item1.CourseTypeId, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="col-md-10">
                                    <a onclick="window.history.back();" class="btn btn-danger">Cancel</a>
                                    <input type="submit" class="btn btn-success" value="Save" />
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (ViewBag.data == true)
    {
        <div class="panel-group" id="accordion1">
            <div class="panel-body">
                <div class="card mb-3">
                    <div class="card-header">
                        <i class="fas fa-table"></i>
                        Edit Course
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("UpdateCourseList", "Course", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(x => x.Item1.CourseId)


                            @*<div class="col-md-12">
                                <div class="form-group">
                                    <div class="col-md-6">
                                        <h5>Course Code</h5>
                                        @Html.TextBoxFor(x => x.Item1.CourseCode, new { @class = "form-control", placeholder = "CSE-1101...", required = "required" })
                                        @Html.ValidationMessageFor(x => x.Item1.CourseCode, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>*@
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="col-md-6">
                                        <h5>Course Title</h5>
                                        @Html.TextBoxFor(x => x.Item1.CourseTitle, new { @class = "form-control", placeholder = "Fundamentals of Computer....", required = "required" })
                                        @Html.ValidationMessageFor(x => x.Item1.CourseTitle, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="col-md-6">
                                        <h5>Credit</h5>
                                        @Html.TextBoxFor(x => x.Item1.Credit, new { @class = "form-control", placeholder = "Numbers Only(3,1.5, etc..)", required = "required" })
                                        @Html.ValidationMessageFor(x => x.Item1.Credit, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="col-md-6">
                                        <h5>Course Summary</h5>
                                        @Html.TextAreaFor(x => x.Item1.CourseSummary, new { @class = "form-control", cols = "50", rows = "6", required = "required" })
                                        @Html.ValidationMessageFor(x => x.Item1.CourseSummary, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="col-md-6">
                                        <h5>Select Course Type</h5>
                                        @Html.DropDownListFor(x => x.Item1.CourseTypeId, ViewBag.CourseTypeList as SelectList, "--- Select Course Type ---", new { @class = "form-control", placeholder = "Numbers Only(10,8,etc)", required = "required" })
                                        @Html.ValidationMessageFor(x => x.Item1.CourseTypeId, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="col-md-10">
                                    <a onclick="window.history.back();" class="btn btn-danger">Cancel</a>
                                    <input type="submit" class="btn btn-success" value="Update" />
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Display all missions of the university in a table -->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-book-open"></i>
            All CourseList
            <a data-toggle="collapse" data-parent="#accordion" href="#collapseThree" class="btn btn-info pull-right fa fa-plus">Add New</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-condensed table-hover table-bordered table-striped table" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Sr.No</th>

                            <th>Course Title</th>
                            <th>Details</th>

                            <th>CLOs</th>
                            <th>CLO To PLO</th>
                            <th>Objectives</th>
                            <th>SEE</th>
                            <th>CIE</th>
                            <th>Assesment</th>
                            <th>Resources</th>
                            <th>Learning Plan</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Item2)
                        {
                            <tr>
                                <td>@(Model.Item2.IndexOf(item) + 1)</td>

                                <td>@item.CourseTitle</td>
                                <td>
                                    <a href="@Url.Action("CourseDetail", "Course", new { id = item.CourseId })" class="btn btn-info">Show</a>
                                </td>
                                <td> <a href="@Url.Action("CLOList", "Course", new { id = item.CourseId})" class="btn btn-info">Show</a></td>
                                <td><a href="@Url.Action("CLOToPLO", "Course", new { id = item.CourseId})" class="btn btn-info">Show</a></td>
                                <td> <a href="@Url.Action("Objectives", "Course", new { id = item.CourseId })" class="btn btn-info">Show</a></td>
                                <td> <a href="@Url.Action("SEEList", "Course", new { id = item.CourseId })" class="btn btn-info">Show</a></td>
                                <td> <a href="@Url.Action("CIEList", "Course", new { id = item.CourseId })" class="btn btn-info">Show</a></td>
                                <td> <a href="@Url.Action("AssesmentStrategies", "Course", new { id = item.CourseId })" class="btn btn-info">Show</a></td>
                                <td> <a href="@Url.Action("ResourceList", "Course", new { id = item.CourseId })" class="btn btn-info">Show</a></td>
                                <td> <a href="@Url.Action("LearningPlan", "Course", new { id = item.CourseId })" class="btn btn-info">Show</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

